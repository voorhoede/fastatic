#!/usr/bin/env node

const fastatic = require('../index');
const pkg = require('../package');
const logger = require('../lib/logger');

const program = require('commander')
	.version(pkg.version)
	.description(`${pkg.name} (v${pkg.version}): ${pkg.description}`)
	.usage('<src> [options]')
	.option('-d, --dest [value]', 'Output destination')
	.option('-l, --log-level [value]', 'Log level (silent|error|warn|verbose)', 'verbose')
	.parse(process.argv);

fastatic({
		src: program.args[0],
		dest: program.dest,
		logLevel: program.logLevel
	})
	.then(config => logger.log('Done. Optimised static files in', config.dest))
	.catch(err => {
		logger.error(err.message);
		process.exitCode = 1;
	});
